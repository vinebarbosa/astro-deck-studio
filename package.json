{
  "name": "astro-desktop",
  "version": "1.0.0",
  "author": {
    "name": "Vin√≠cios Barbosa"
  },
  "license": "MIT",
  "main": "build/index.js",
  "description": "A useful tool for streamers and power users.",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript",
    "streaming"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "yarn build:electron && electron .",
    "build": "yarn build:vite && yarn build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p electron",
    "pack": "electron-builder --dir",
    "dist": "yarn build:vite && yarn build:electron && yarn electron-builder",
    "clean": "rimraf dist build"
  },
  "build": {
    "productName": "Astro",
    "asar": true,
    "win": {
      "target": "portable",
      "icon": "./.github/icon.png"
    },
    "files": [
      "build"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "polished": "^4.1.4",
    "react": "^17.0.2",
    "react-dnd": "^15.1.1",
    "react-dnd-html5-backend": "^15.1.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-modal": "^3.14.4",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-modal": "^3.13.1",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-react": "^1.0.7",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.29.4",
    "git-commit-msg-linter": "^4.1.1",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  }
}
